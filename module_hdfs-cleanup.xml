<?xml version="1.0" encoding="UTF-8"?>
<project name="module_hdfs-cleanup" default="compile.module.hdfs-cleanup">
  <dirname property="module.hdfs-cleanup.basedir" file="${ant.file.module_hdfs-cleanup}"/>
  
  <property name="module.jdk.home.hdfs-cleanup" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.hdfs-cleanup" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.hdfs-cleanup" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.hdfs-cleanup" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="hdfs-cleanup.output.dir" value="${module.hdfs-cleanup.basedir}/out/production/hdfs-cleanup"/>
  <property name="hdfs-cleanup.testoutput.dir" value="${module.hdfs-cleanup.basedir}/out/test/hdfs-cleanup"/>
  
  <path id="hdfs-cleanup.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hdfs-cleanup.module.production.classpath">
    <path refid="${module.jdk.classpath.hdfs-cleanup}"/>
    <path refid="library.org.apache.hadoop:hadoop-hdfs:2.6.0.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.0.2.classpath"/>
    <path refid="library.com.beust:jcommander:1.72.classpath"/>
  </path>
  
  <path id="hdfs-cleanup.runtime.production.module.classpath">
    <pathelement location="${hdfs-cleanup.output.dir}"/>
    <path refid="library.org.apache.hadoop:hadoop-hdfs:2.6.0.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.0.2.classpath"/>
    <path refid="library.com.beust:jcommander:1.72.classpath"/>
  </path>
  
  <path id="hdfs-cleanup.module.classpath">
    <path refid="${module.jdk.classpath.hdfs-cleanup}"/>
    <pathelement location="${hdfs-cleanup.output.dir}"/>
    <path refid="library.org.apache.hadoop:hadoop-hdfs:2.6.0.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.0.2.classpath"/>
    <path refid="library.com.beust:jcommander:1.72.classpath"/>
  </path>
  
  <path id="hdfs-cleanup.runtime.module.classpath">
    <pathelement location="${hdfs-cleanup.testoutput.dir}"/>
    <pathelement location="${hdfs-cleanup.output.dir}"/>
    <path refid="library.org.apache.hadoop:hadoop-hdfs:2.6.0.classpath"/>
    <path refid="library.org.apache.logging.log4j:log4j-core:2.0.2.classpath"/>
    <path refid="library.com.beust:jcommander:1.72.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.hdfs-cleanup">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hdfs-cleanup">
    <patternset refid="excluded.from.module.hdfs-cleanup"/>
  </patternset>
  
  <path id="hdfs-cleanup.module.sourcepath">
    <dirset dir="${module.hdfs-cleanup.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hdfs-cleanup" depends="compile.module.hdfs-cleanup.production,compile.module.hdfs-cleanup.tests" description="Compile module hdfs-cleanup"/>
  
  <target name="compile.module.hdfs-cleanup.production" depends="register.custom.compilers" description="Compile module hdfs-cleanup; production classes">
    <mkdir dir="${hdfs-cleanup.output.dir}"/>
    <javac2 destdir="${hdfs-cleanup.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hdfs-cleanup}/javac">
      <compilerarg line="${compiler.args.hdfs-cleanup}"/>
      <bootclasspath refid="hdfs-cleanup.module.bootclasspath"/>
      <classpath refid="hdfs-cleanup.module.production.classpath"/>
      <src refid="hdfs-cleanup.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hdfs-cleanup"/>
    </javac2>
    
    <copy todir="${hdfs-cleanup.output.dir}">
      <fileset dir="${module.hdfs-cleanup.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hdfs-cleanup.tests" depends="register.custom.compilers,compile.module.hdfs-cleanup.production" description="compile module hdfs-cleanup; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hdfs-cleanup" description="cleanup module">
    <delete dir="${hdfs-cleanup.output.dir}"/>
    <delete dir="${hdfs-cleanup.testoutput.dir}"/>
  </target>
</project>